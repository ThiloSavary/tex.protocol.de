\newtoggle{PConstKnown}

\ifcsdef{PConst}{
	\PackageWarning{PhysicalConstants}{Command 'PConst' already exists.}{}
}{
	\newcommand{\PConst}[2][]{
		\togglefalse{PConstKnown}
		\ifstrequal{#2}{faraday}{
			\SI[#1]{96485,332}{\ampere\second\per\mol}
			\toggletrue{PConstKnown}
		}
		
		\nottoggle{PConstKnown}{\PackageError{PhysicalConstants}{Physical Constant '#2' unknown. }{}}
	}
}



