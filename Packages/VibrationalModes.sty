\ifcsname Vib\endcsname%
	\PackageWarning{VibrationalModes}{Command 'Vib' already exists.}{}
\else%
	\def\Vib{%
   		\@ifnextchar[%
     		{\Vib@i}
     		{\relax\PackageError{VibrationalModes}{Command 'Vib' needs more arguments}{}}%
	}
	
	\def\Vib@i[#1]{%
   		\@ifnextchar[%
     		{\Vib@ii{#1}}
     		{\Vib@ii{#1}[s]}%
	}

	\def\Vib@ii#1[#2]{%
 		\@ifnextchar\bgroup%
     		{\Vib@iii{#1}{#2}}
     		{$#1_\text{#2}$}%
	}

	\def\Vib@iii#1#2#3{%
		$#1_\text{#2}(\ch{#3})$
	}
\fi%