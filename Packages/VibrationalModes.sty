\ifcsname SVib\endcsname%
	\PackageWarning{VibrationalModes}{Command 'SVib' already exists.}{}
\else%
	\def\SVib{%
   		\@ifnextchar[%
     		{\SVib@i}
     		{\SVib@i[s]}%
	}
	\def\SVib@i[#1]{%
   		\@ifnextchar\bgroup%
     		{\SVib@ii{#1}}
     		{$\upnu_\text{#1}$}%
	}

	\def\SVib@ii#1#2{%
  		$\upnu_\text{#1}(\ch{#2})$
	}
\fi%

